{
  "version": "1.0",
  "description": "Claude Code permissions for Occupancy by Site Report project",

  "fileSystem": {
    "read": {
      "allowed": ["**/*"],
      "description": "Read access to all project files"
    },
    "write": {
      "allowed": [
        "src/**/*",
        "CHANGELOG.md",
        "package.json",
        "package-lock.json",
        "tsconfig.json",
        "vite.config.ts",
        ".gitignore",
        "index.html",
        "*.config.js",
        "*.config.ts"
      ],
      "requireApproval": [
        ".env",
        ".env.*"
      ],
      "blocked": [
        "node_modules/**",
        ".git/**"
      ],
      "description": "Write access to source files and configs, approval needed for env files"
    },
    "delete": {
      "requireApproval": ["**/*"],
      "description": "Require approval for all deletions"
    }
  },

  "commands": {
    "allowed": [
      "npm install",
      "npm install *",
      "npm run dev",
      "npm run build",
      "npm run lint",
      "npm run type-check",
      "npm run test",
      "npm list",
      "npm outdated",
      "ls",
      "ls *",
      "pwd",
      "cat *",
      "mkdir *",
      "git status",
      "git diff",
      "git diff *",
      "git log",
      "git log *",
      "git add .",
      "git add *",
      "git commit -m *",
      "git push",
      "git push *",
      "npm publish",
      "node --version",
      "npm --version"
    ],
    "requireApproval": [
      "npm uninstall *",
      "rm *",
      "rm -rf *"
    ],
    "blocked": [
      "git push --force",
      "git reset --hard",
      "sudo *",
      "chmod *",
      "chown *"
    ],
    "description": "Safe commands allowed automatically, destructive commands need approval"
  },

  "network": {
    "allowed": [
      "registry.npmjs.org",
      "github.com",
      "*.github.com"
    ],
    "description": "Allow npm registry and GitHub access"
  },

  "project": {
    "autoUpdateChangelog": true,
    "confirmBeforeInstall": false,
    "confirmBeforeBuild": false,
    "confirmBeforeGitPush": false,
    "description": "Auto-update CHANGELOG.md per project protocol"
  }
}
